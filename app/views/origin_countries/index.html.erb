<div class="page-header">
  <h1>
    Origin countries
    <a href="/origin_countries/new" class="btn btn-lg btn-success">New Origin country</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
      </tr>

      <% @origin_countries.each do |origin_country| %>
      <tr>
        <td><%= origin_country.name %></td>
        <td><img src="<%= origin_country.cover_photo_url %>"</td>
        <td><%= origin_country.description %></td>
        <td>
          <a href="/origin_countries/<%= origin_country.id %>" class="btn btn-primary">Show</a>
          <a href="/origin_countries/<%= origin_country.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_origin_country/<%= origin_country.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @origin_countries, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
