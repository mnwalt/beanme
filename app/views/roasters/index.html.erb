<div class="containter">
  <div class="page-header">
    <h1>
      Roasters
    </h1>
  </div>

  <div class="row mb-1">
    <div class="col-md-12">
      <%= search_form_for @q, :class => "collapse", :id => "roasters_filters" do |f| %>
      <p class="lead">Narrow results:</p>

      <div class="form-group">
        <%= f.label :name_cont, "Name" %>
        <%= f.text_field :name_cont, :class => "form-control", :placeholder => "" %>
      </div>

      <div class="form-group">
        <%= f.label :city_cont, "City" %>
        <%= f.text_field :city_cont, :class => "form-control", :placeholder => "" %>
      </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/roasters" class="btn btn-default btn-block mb-1">Clear filters</a>
      <% end %>
      <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#roasters_filters">
        Show Filters
      </a>
    </div>
  </div>

  <div class="row mb-1">
    <div class="col-md-12">
  <div class="table">
    <% @roasters.each do |roaster| %>
    <div class="col-md-3">
      <div class="panel panel-default" style="height: 300px;">
        <div class="panel-heading" style="text-align: center;">
          <h4 class="panel-title">
            <a> <%= roaster.city %></a>
          </h4>
        </div>
        <div class="panel-body">
          <a href="/roasters/<%= roaster.id %>">
            <img src="<%= roaster.cover_photo_url %>" class="img-responsive center-block" style="max-height: 100px;">
          </a>
          <br>
          <h4>
            <a href="/roasters/<%= roaster.id %>"><%= roaster.name %></a>
          </h4>
          <% if roaster.reviews.count == 0 %>
          <a>
            <span title="roaster beans not yet rated">
              <i class="fa fa-star-o" aria-hidden="true"></i>
            </span>
          </a>
          <% else %>
          <% @avg = roaster.reviews.pluck(:overall_rating).inject(0){|sum,x| sum + x } / roaster.reviews.pluck(:overall_rating).count %>
          <% @n = roaster.reviews.pluck(:overall_rating).count %>
          <% if @avg < 0.75 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star-half" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 1.25 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 1.75 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star-half" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 2.25 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 2.75 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star-half" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 3.25 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 3.75 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star-half" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 4.25 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <% if @avg < 4.75 %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star-half" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% else %>
          <a>
            <span title="based on individual bean ratings">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
            </span>
            <small> (<%= @n %>) </small>
          </a>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <br>
          <% if %>
          <% roaster.delivery_geography.downcase == "international" %>
          <span title="delivers international">
            <i class="fa fa-globe" aria-hidden="true"></i>
          </span>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <%= paginate @roasters, theme: 'twitter-bootstrap-4' %>
  </div>

  <div class="row m-b-2">
    <div class="col-md-12">
      <div>
        <div id="location_map" style="height: 480px;"></div>
      </div>
    </div>
  </div>

  <script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
  </script>
</div>
</div>
</div>
