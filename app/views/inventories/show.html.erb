<div class="page-header">
  <h3>Inventory #<%= @inventory.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @inventory.user_id %></dd>

      <dt>Bean</dt>
      <dd><%= @inventory.bean_id %></dd>

      <dt>Quantity ounces</dt>
      <dd><%= @inventory.quantity_ounces %></dd>

      <dt>Roast date</dt>
      <dd><%= @inventory.roast_date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/inventories" class="btn btn-primary">
        Back
      </a>
      <a href="/inventories/<%= @inventory.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_inventory/<%= @inventory.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
